<div class="section banner">
  <img src="assets/image/banner_widgeon_001.jpg" alt="Widgeon Lake">
</div>

<div class="section posts">
  <div class="container">
    <ul>
      {{#each paginated as |post|}}
      <li>{{#link-to 'posts.show' post}}
        <h5>{{post.title}}</h5>
        {{/link-to}}
        <div class="date">{{post.createdAt}}</div>
        <div>{{markdown-to-html markdown=post.md}}</div>
      </li>
      {{/each}}
    </ul>

    <div id="pagination">
      {{#if olderPostsExist}}
        {{#link-to 'posts' (query-params page=olderPage)}}Older Posts{{/link-to}}
      {{/if}}
      {{#if needsPaginationSeperator}}
         -
      {{/if}}
      {{#if newerPostsExist}}
         {{#link-to 'posts' (query-params page=newerPage)}}Newer Posts{{/link-to}}
      {{/if}}
    </div>
  </div>
</div>
